<h1>紹介会社一覧</h1>
<% if @agent.any? %>
<div class="container">
  <div class="row">
    <div class="col-sm-8 top">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>id</th>
            <th>紹介会社名</th>
          </tr>
        </thead>
      <tbody>
      <% @agent.each do |agent| %>
        <tr>
          <td><%= link_to agent.id, agent %></td>
          <td><%= agent.company %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
<% end %>
  </div>
  <div class="col-sm-4 border">
　  <ul class="list-group">
      <li class="list-group-item"><%= link_to '紹介会社登録', new_agent_path %></li>
      <li class="list-group-item"><%= link_to 'ユーザページに戻る', current_user %></li>
　　</ul>
  </div>
</div>
