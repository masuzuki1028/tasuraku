<h1><%= @agent.company %>関連プロジェクト一覧</h1>
<% if @projects.any? %>
<div class="container">
  <div class="row">
    <div class="col-sm-8 top">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>id</th>
            <th>プロジェクト名</th>
          </tr>
        </thead>
      <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= link_to project.agent.id, project.agent %></td>
          <td><%= project.title %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
<% end %>
  </div>
  <div class="col-sm-4 border">
　  <ul class="list-group">
      <li class="list-group-item"><%= link_to '紹介会社登録', new_agent_path %></li>
      <li class="list-group-item"><%= link_to 'ユーザページに戻る', current_user %></li>
　　</ul>
  </div>
</div>
